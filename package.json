{
    "name": "dune-www",
    "version": "1.0.0",
    "license": "UNLICENSED",
    "private": true,
    "scripts": {
        "build": "next build",
        "clean": "rimraf .next generated",
        "codegen": "graphql-codegen --config .config/codegen.yaml",
        "codegen:watch": "yarn codegen --watch",
        "commit": "git-cz",
        "dev": "next dev",
        "i18n": "yarn i18n:extract && yarn i18n:compile",
        "i18n:extract": "formatjs extract '{pages,components,layouts}/**/*.{js,ts,tsx}' --format simple --id-interpolation-pattern '[sha512:contenthash:base64:6]' --out-file generated/intl/lang/en.json",
        "i18n:compile": "formatjs compile-folder --ast --format simple generated/intl/lang generated/intl/compiled-lang",
        "lint": "eslint . --cache",
        "lint:fix": "yarn lint --fix",
        "lint:format": "prettier --write .",
        "lint:styles": "stylelint \"**/*.css\" --fix",
        "lint:types": "tsc --pretty --noEmit",
        "prebuild": "concurrently \"yarn i18n\"",
        "predev": "yarn i18n",
        "prepare": "husky install .config/husky",
        "start": "next start --port 4000",
        "test": "jest --passWithNoTests",
        "test:watch": "yarn test --watch"
    },
    "dependencies": {
        "graphql": "^15.5.0",
        "next": "10.1.3",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "react-intl": "^5.15.8"
    },
    "devDependencies": {
        "@commitlint/config-conventional": "^12.1.1",
        "@formatjs/cli": "^4.2.7",
        "@graphql-codegen/cli": "^1.21.3",
        "@graphql-codegen/typescript": "^1.21.1",
        "@graphql-codegen/typescript-operations": "^1.17.15",
        "@types/jest": "^26.0.22",
        "@types/node": "^14.14.38",
        "@types/react": "^17.0.3",
        "@types/react-dom": "^17.0.3",
        "@typescript-eslint/eslint-plugin": "^4.22.0",
        "@typescript-eslint/parser": "^4.22.0",
        "autoprefixer": "^10.2.5",
        "babel-plugin-formatjs": "^10.2.7",
        "commitizen": "^4.2.3",
        "concurrently": "^6.0.2",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^7.24.0",
        "eslint-config-prettier": "^8.2.0",
        "eslint-import-resolver-typescript": "^2.4.0",
        "eslint-plugin-formatjs": "^2.14.6",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-prettier": "^3.3.1",
        "eslint-plugin-react": "^7.23.2",
        "eslint-plugin-react-hooks": "^4.2.0",
        "husky": "^6.0.0",
        "jest": "^26.6.3",
        "postcss": "^8.2.10",
        "prettier": "^2.2.1",
        "rimraf": "^3.0.2",
        "stylelint": "^13.12.0",
        "stylelint-config-standard": "^21.0.0",
        "tailwindcss": "^2.1.1",
        "typescript": "^4.2.4"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    }
}
